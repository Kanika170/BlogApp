<!-- new.html.erb -->

<h1>New Post</h1>

<%= form_with(model: @post, url: posts_path) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_field :body %>
  </div>

  <div>
    <%= form.submit "Create Post" %>
  </div>
<% end %>
