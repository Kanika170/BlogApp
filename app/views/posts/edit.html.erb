<!-- edit.html.erb -->

<h3>Update Post </h3>
<%= form_with model: @post do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_field :body %>
  </div>

  <div>
    <%= form.submit "Update Post" %>
  </div>
<% end %>